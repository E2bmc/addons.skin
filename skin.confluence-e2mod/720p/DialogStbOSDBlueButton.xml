<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="videowindow">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
		</control>
		<control type="group">
		<animation effect="slide" start="0,0" end="-300,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
		<animation effect="slide" start="-50,0" end="0,0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
		<control type="button" id="9001">
			<posx>250</posx>
			<posy>260</posy>
			<width>42</width>
			<height>128</height>
			<font>-</font>
			<texturefocus>HasSub.png</texturefocus>
			<texturenofocus>HasSub.png</texturenofocus>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>260</width>
			<height>720</height>
			<texture border="0,0,10,0">MediaBladeSub.png</texture>
		</control>
		<control type="image">
			<description>LOGO</description>
			<posx>15</posx>
			<posy>50</posy>
			<width>220</width>
			<height>80</height>
			<aspectratio>keep</aspectratio>
			<texture>Confluence_Logo.png</texture>
		</control>
			<control type="button" id ="10">
				<posx>5</posx>
				<posy>140</posy>
				<width>240</width>
				<height>30</height>
				<font>font14</font>
				<label></label>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<texturefocus border="5">button-focus2.png</texturefocus>
				<texturenofocus border="5">button-nofocus.png</texturenofocus>
				<onup>10</onup>
				<ondown>11</ondown>
			</control>
			<control type="radiobutton" id="11">
				<visible>!IsEmpty(Window.Property(pipactive))</visible>
				<posx>5</posx>
				<posy>170</posy>
				<height>30</height>
				<width>240</width>
				<font>font132</font>
				<label>_(Zap focus to Picture in Picture)</label>
				<textcolor>white</textcolor>
				<texturefocus border="5">button-focus2.png</texturefocus>
				<texturenofocus border="5">button-nofocus.png</texturenofocus>
				<onup>10</onup>
				<ondown>12</ondown>
			</control>
			<control type="button" id ="12">
				<visible>!IsEmpty(Window.Property(pipactive))</visible>
				<posx>5</posx>
				<posy>200</posy>
				<width>240</width>
				<height>30</height>
				<font>font14</font>
				<label>Configure PiP</label>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<texturefocus border="5">button-focus2.png</texturefocus>
				<texturenofocus border="5">button-nofocus.png</texturenofocus>
				<onup>11</onup>
				<ondown>12</ondown>
			</control>
		</control>
	</controls>
</window>
