<window>
	<defaultcontrol>10</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>special://skin/backgrounds/SKINDEFAULT.jpg</texture>
		</control>
		<control type="image">
			<posx>50</posx>
			<posy>50</posy>
			<width>1180</width>
			<height>620</height>
			<texture border="15">ContentPanel.png</texture>
		</control>
		<control type="image">
			<posx>65</posx>
			<posy>65</posy>
			<width>1150</width>
			<height>590</height>
			<texture border="40">black-back2.png</texture>
		</control>
		<control type="image">
			<posx>75</posx>
			<posy>61</posy>
			<width>1000</width>
			<height>30</height>
			<texture>GlassTitleBar.png</texture>
		</control>
		<control type="image">
			<posx>280</posx>
			<posy>95</posy>
			<width>690</width>
			<height>460</height>
			<texture border="40">black-back2.png</texture>
		</control>
		<control type="progress" id="1">
			<posx>300</posx>
			<posy>580</posy>
			<width>650</width>
			<height>30</height>
			<info>Stb.ScanProgress</info>
			<midtexture border="6,0,6,0">OSDProgressMidLight.png</midtexture>
		</control>
		<control type="progress" id="1">
			<posx>300</posx>
			<posy>580</posy>
			<width>650</width>
			<height>30</height>
			<info>Stb.ScanProgress</info>
		</control>
		<control type="label">
			<posx>300</posx>
			<posy>620</posy>
			<width>680</width>
			<height>25</height>
			<font>font14</font>
			<textcolor>white</textcolor>
			<align>center</align>
			<aligny>center</aligny>
			<label>_(Found) $INFO[Stb.ScanServicesFound] _(channels)</label>
		</control>
		<control type="button">
			<visible>!IsEmpty(Window.Property(scan_done))</visible>
			<posx>500</posx>
			<posy>420</posy>
			<width>280</width>
			<height>40</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font14</font>
			<label>_(Press ok to exit)</label>
		</control>
		<control type="image">
			<description>Section header image</description>
			<posx>20</posx>
			<posy>3</posy>
			<width>35</width>
			<height>35</height>
			<aspectratio>keep</aspectratio>
			<texture>icon_system.png</texture>
		</control>
		<control type="grouplist">
			<posx>65</posx>
			<posy>5</posy>
			<width>1000</width>
			<height>30</height>
			<orientation>horizontal</orientation>
			<align>left</align>
			<itemgap>5</itemgap>
			<control type="label" id="2">
				<include>WindowTitleCommons</include>
				<label>_(Fast scan)</label>
			</control>
		</control>
		<include>Clock</include>		
	</controls>
</window>
